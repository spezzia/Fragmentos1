<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragmentos.Recetas">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User: "
                android:textSize="15dp"
                android:gravity="right"
                android:textColor="@color/colorPrimary"
                android:layout_margin="0dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recetas"
                android:textSize="40dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comida: "
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/comida_receta"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/comida"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Postre: "
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/postre_receta"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/postre"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bebida: "
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/bebida_receta"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/bebida"/>
            <Button
                android:id="@+id/salir_recetas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salir"
                />

        </LinearLayout>
    </ScrollView>


</FrameLayout>